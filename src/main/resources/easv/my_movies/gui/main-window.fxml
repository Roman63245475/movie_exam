<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="600.0" minWidth="900.0" prefHeight="700.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="easv.my_movies.gui.MainController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="header-label" text="MyMovies â–¶" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Filter:" />
                <TextField fx:id="filterTextField" promptText="Search movie..." />
                <Button mnemonicParsing="false" text="ðŸ”" />
            </children>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.28, 0.55" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="header-label" text="CATEGORY" />
                        <TableView fx:id="CategoriesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="categoryName" prefWidth="100.0" text="Name" />
                                <TableColumn fx:id="moviesAmount" prefWidth="70.0" text="Amount" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button fx:id="newCategoryButton" mnemonicParsing="false" onAction="#addNewOrEditCategory" styleClass="action-button" text="New" />
                                <Button fx:id="EditCategoryButton" mnemonicParsing="false" onAction="#addNewOrEditCategory" text="Edit" />
                                <Button mnemonicParsing="false" onAction="#onDeleteCategoryClick" text="Delete" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="10.0" right="5.0" />
                    </padding>
                </VBox>


                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="header-label" text="MOVIES IN CATEGORY" />
                        <ListView fx:id="moviesInCategoryList" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#deleteMovieFomCategory" text="Delete" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="5.0" right="5.0" />
                    </padding>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="header-label" text="ALL MOVIES" />
                        <TableView fx:id="moviesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="movieTitle" prefWidth="100.0" text="Title" />
                                <TableColumn fx:id="ratingColumn" prefWidth="60.0" text="Rating" />
                        <TableColumn fx:id="movieDuration" prefWidth="60.0" text="Duration" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#addMovieToCategory" text="â¬… Add to Category" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="newMovieButton" mnemonicParsing="false" onAction="#onNewOrEditMovieClick" styleClass="action-button" text="New" />
                                <Button fx:id="EditMovieButton" mnemonicParsing="false" onAction="#onNewOrEditMovieClick" text="Edit" />
                                <Button mnemonicParsing="false" onAction="#onDeleteMovieClick" text="Delete" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" />
                            </padding>
                        </HBox>
                    </children>
                    <padding>
                        <Insets left="5.0" right="10.0" />
                    </padding>
                </VBox>
            </items>

            <BorderPane.margin>
                <Insets bottom="10.0" left="30.0" right="30.0" top="0.0" />
            </BorderPane.margin>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="80.0" spacing="20.0" style="-fx-background-color: #181818; -fx-border-color: #282828; -fx-border-width: 1 0 0 0;" BorderPane.alignment="CENTER">
            <children>

                <Region prefHeight="79.0" prefWidth="304.0" HBox.hgrow="ALWAYS" />
                <Button fx:id="controlButton" mnemonicParsing="false" onAction="#launchVideo" style="-fx-border-radius: 20; -fx-background-radius: 20;" styleClass="media-button, play-button" text="Play" />

                <Region prefHeight="79.0" prefWidth="141.0" HBox.hgrow="ALWAYS" />

                <HBox alignment="CENTER" spacing="10.0">
                    <padding>
                        <Insets right="30.0" />
                    </padding>
                </HBox>

                <Button mnemonicParsing="false" onAction="#onCloseClick" text="Close">
                    <HBox.margin>
                        <Insets right="30.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
</BorderPane>
